@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">

        <ul class="row">

            <li class="offset-7">

                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)</a>

            </li>
            <li style="margin-left:250px">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">  <i class="fas fa-sign-out-alt"></i> Logout</button>
            </li>
        </ul>
    </form>
}
else
{

    <li style="margin-left:100px"><a asp-area="Identity" asp-page="/Account/Register"> Register</a></li>
    <li><a asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a></li>

}