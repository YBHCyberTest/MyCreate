@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />

<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-6">
            <form id="login-form" class="form" action="" method="post">
                <h3 class="text-center text-info">Login</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="text-info">Email</label><br>
                    <input asp-for="Input.Email" type="email" name="email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="text-info">Password:</label><br>
                    <input type="password" asp-for="Input.Password" name="password" id="password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label for="remember-me" asp-for="Input.RememberMe" class="text-info"><span>Remember me</span>&nbsp;<span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                    <button type="submit" class="btn btn-info btn-md">Log in</button>
                </div>

            </form>
        </div>
    </div>
</div>